<UserControl
    x:Class="WinTodo.Views.TodoItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinTodo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="40"
    d:DesignWidth="460"
    mc:Ignorable="d">
    <Grid x:Name="ItemGrid" Background="Transparent" BorderBrush="Transparent" BorderThickness="1"
          PointerEntered="ItemGrid_PointerEntered" PointerExited="ItemGrid_PointerExited">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 状态图标 -->
        <TextBlock
            x:Name="StatusIcon"
            Grid.Column="0"
            Width="20"
            Margin="0,8,8,8"
            FontSize="12"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="⬜" />

        <!-- 任务标题标签 -->
        <TextBlock
            x:Name="TitleLabel"
            Grid.Column="1"
            Margin="0,8,0,8"
            FontFamily="Microsoft YaHei UI"
            FontSize="14"
            Foreground="#343A40"
            TextWrapping="Wrap"
            MaxWidth="440"
            VerticalAlignment="Center"
            DoubleTapped="TitleLabel_DoubleTapped" />

        <!-- 任务标题编辑框 -->
        <TextBox
            x:Name="TitleEdit"
            Grid.Column="1"
            Visibility="Collapsed"
            Margin="0,8,0,8"
            FontFamily="Microsoft YaHei UI"
            FontSize="14"
            MaxWidth="440"
            TextWrapping="Wrap"
            LostFocus="TitleEdit_LostFocus"
            TextChanged="TitleEdit_TextChanged"
            KeyDown="TitleEdit_KeyDown"
            BorderThickness="0"
            BorderBrush="Transparent"
            Background="Transparent" />
    </Grid>
</UserControl>
