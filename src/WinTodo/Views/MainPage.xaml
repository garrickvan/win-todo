<Page
    x:Class="WinTodo.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinTodo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:WinTodo.UI"
    Background="#FFFFFF"
    mc:Ignorable="d">
    <Grid
        Background="#FFFFFF"
        PointerPressed="Grid_PointerPressed"
        PointerMoved="Grid_PointerMoved"
        PointerReleased="Grid_PointerReleased">
        <Grid.RowDefinitions>
            <RowDefinition Height="36" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <!-- 顶部标题栏 -->
        <Grid Grid.Row="0" Background="#5B9BD5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 标题 -->
            <TextBlock
                Grid.Column="0"
                Margin="20,0,0,0"
                FontFamily="Microsoft YaHei UI"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                Text="待办任务"
                VerticalAlignment="Center" />

            <!-- 固定/解锁按钮 -->
            <Button
                x:Name="LockButton"
                Grid.Column="1"
                Margin="0,0,8,0"
                Padding="12,0"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                Content="馃敀"
                FontFamily="Segoe UI Emoji"
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Click="LockButton_Click"
                ToolTipService.ToolTip="固定/解锁窗口位置" />

            <!-- 添加任务按钮 -->
            <Button
                x:Name="AddTaskButton"
                Grid.Column="2"
                Margin="0,0,0,0"
                Padding="12,0"
                Background="#34D399"
                BorderBrush="Transparent"
                BorderThickness="0"
                CornerRadius="0"
                Content="+ 添加任务"
                FontFamily="Microsoft YaHei UI"
                FontSize="12"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Click="AddTaskButton_Click"
                PointerEntered="AddTaskButton_PointerEntered"
                PointerExited="AddTaskButton_PointerExited" />
        </Grid>

        <!-- 分类标签栏 -->
        <Grid Grid.Row="1" Background="#F8F9FA">
            <StackPanel
                x:Name="CategoryTabs"
                Margin="8,8,8,8"
                Orientation="Horizontal"
                Spacing="8">
                <!-- 分类按钮将在代码中动态添加 -->
            </StackPanel>
        </Grid>

        <!-- 任务列表区域 -->
        <ScrollViewer
            x:Name="TasksScrollViewer"
            Grid.Row="2"
            HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Auto"
            RightTapped="TasksScrollViewer_RightTapped">
            <StackPanel
                x:Name="TasksContainer"
                Margin="8,8,8,8"
                Orientation="Vertical"
                Spacing="0" />
        </ScrollViewer>

        <!-- 底部状态栏 -->
        <Grid Grid.Row="3" Background="White" BorderBrush="#E1E4E8" BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 任务统计 -->
            <TextBlock
                x:Name="StatsLabel"
                Grid.Column="0"
                Margin="20,0,0,0"
                FontFamily="Microsoft YaHei UI"
                FontSize="14"
                Foreground="#666666"
                Text="总任务: 0 已完成: 0 进行中: 0"
                VerticalAlignment="Center" />

            <!-- 最后更新时间 -->
            <TextBlock
                x:Name="UpdateLabel"
                Grid.Column="1"
                Margin="0,0,20,0"
                FontFamily="Microsoft YaHei UI"
                FontSize="12"
                Foreground="#999999"
                Text="最后更新: 2024-01-01 00:00:00"
                VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Page>
